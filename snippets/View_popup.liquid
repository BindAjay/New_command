<!-- Quickview feature -->
<div class="quick-box" id="quick-pop">
  <div class="quick-cut">
    <span class="quick-close">X</span>
  </div>
  <div class="quick-text-box-main">
    <div class="quick-text-box"> </div>
  </div>
 </div>


  <style>
  .quick-box {
    width: 100%;
    background-color: rgb(0,0,0,0.2);
    position: fixed;
    top: 0%;
    margin: 0 auto;
    /* left: 15%; */
    z-index: 999 !important;
    display: none;
}
.quick-cut{
  width: 80%;
    position: relative;
    top: 50px;
    right: 2%;
    margin: 0 auto;
    text-align: right;
    }  
    .quick-text-box{
      width: 100%;
      display: flex;
      margin: 0 auto;
      background: #fff;
      font-size: 16px;
    }
    .view-img{
      width:50%;
    
    }
    .view-box{
      width:50%;
      color:black;
    }
    .quickAdd{
     background-color: lightblue;
    width: 60%;
    border: none;
    padding: 13px;
    border-radius: 10px;
    outline: none;
      cursor: pointer;
    }
    .view-img img {
    width: 52%;
    overflow: hidden;
    }
    .quick-close{
     font-size: 30px;
    padding: 8px;
    border-radius: 50%;
    cursor: pointer;
}
.quick-text-box .shopify-section{
  width:100%;
} 

.quick-text-box-main{
  width: 80%;
    margin: 0 auto;
    overflow-y: scroll;
    height: 95dvh;
}
.quick-text-box-main::-webkit-scrollbar {
    width: 8px;
}
.quick-text-box-main::-webkit-scrollbar-track {
 /* box-shadow: inset 0 0 5px grey; */
  background-color: #fff;
}
/* Handle */
.quick-text-box-main::-webkit-scrollbar-thumb {
  background:gray; 
  border-radius: 10px;
}
  </style>
 
  <script>
  var btn=document.querySelectorAll(".quick-close");
  btn.forEach((butn) => {
    butn.addEventListener('click',function(){
     this.closest('.quick-box').style.display="none";
    });
  });

   

</script>



