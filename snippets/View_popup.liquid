<!-- Quickview feature -->
<div class="quick-box" id="quick-pop">
  <div class="quick-cut">
    <span class="quick-close">X</span>
  </div>
  <div class="quick-text-box"> 
    
  </div>
 </div>


  <style>
      .quick-box {
       width: 80%;
   /* background-color: 	rgb(0,0,0,0.6); */
    position: fixed;
    top: 20%;
    left: 10%;
        z-index:999 !important;
     display:none;
        padding-bottom:30px;
  }
.quick-cut{
  width:95%;
  margin:0 auto;
   text-align: right;
    color: #fff;
    font-size: 2rem;
    padding-right: 10px;
    padding-top: 10px;
  overflow:hidden;
  
    }  
    .quick-text-box{
     width: 100%;
     height: 400px;
      display:flex;
    margin: 0 auto;
    background: #ff0;
    padding: 2%;
   font-size: 16px;
      overflow:hidden;
      border-radius:20px;
    }
    .view-img{
      width:50%;
    
    }
    .view-box{
      width:50%;
      color:black;
    }
    .quickAdd{
     background-color: lightblue;
    width: 60%;
    border: none;
    padding: 13px;
    border-radius: 10px;
    outline: none;
      cursor: pointer;
    }
    .view-img img {
    width: 52%;
    overflow: hidden;
    }
    .quick-close{
      background-color: red;
    padding: 8px;
    border-radius: 50%;
    cursor: pointer;
}
    
  </style>
 
  <script>
  var btn=document.querySelectorAll(".quick-close");
  btn.forEach((butn) => {
    butn.addEventListener('click',function(){
     this.closest('.quick-box').style.display="none";
    });
  });

   

</script>



